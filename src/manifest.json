{
    "manifest_version": 2,
    "name": "Just Report It",
    "description": "The proper way to report spam!",
    "default_locale": "en-US",
    "version": "1.3.0",
    "author": "Nicolas Provencher",
    "applications": {
        "gecko": {
            "id": "admin@justreport.it",
            "strict_min_version": "68.0",
            "strict_max_version": "78.*"
        }
    },
    "background": {
        "scripts": [
          "scripts/background.js"
        ]
      },
    "icons": {
        "64": "images/spam.png",
        "32": "images/spam-32px.png",
        "16": "images/spam-16px.png"
    },
    "options_ui": {
        "page": "options/options.html",
        "open_in_tab": false,
        "browser_style": true
    },
    "message_display_action": {
        "default_title": "Report it",
        "default_icon": "images/spam-32px.png"
    },
    "permissions": [
        "messagesMove",
        "messagesRead",
        "accountsRead",
        "storage",
        "menus"
    ]
}
